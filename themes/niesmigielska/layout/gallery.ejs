<%- partial('_partial/head.ejs') %>
<body id="gallery">
<div id="flexbox">
    <div id="flexbox-a">
        <%- partial('_partial/header.ejs') %>
    </div>
    <div id="flexbox-b">
        <div class="swiper-container">
            <div class="swiper-wrapper">
                <div class="intro-slide swiper-slide" style="width: 400px">
                    <%- page.content %>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    html, body {
        height: 100%;
    }

    #flexbox {
        width: 100%;
        height: 100vh;
        max-height: 100vh;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    #flexbox-a {
        flex-grow: 0;
    }

    #flexbox-b {
        flex-grow: 1;
    }

    .swiper-container {
        flex-shrink: 0;
        height: calc(100vh - 90px);
    }
    .swiper-wrapper {
        height: 100%;
        margin-left: auto;
        margin-right: auto;
        display: flex;
        flex-direction:row;
        flex-wrap: nowrap;
        overflow-x: visible;
        overflow-y: hidden;
    }

    .swiper-slide {
        margin: 0 20px;
    }
    .swiper-slide.intro-slide {
        background-color: #fafafa;
        padding: 20px;
        width: 50vw;
        flex-shrink: 0;
    }

    .intro-slide {
        font-size: 20px;
        font-weight: 300;
    }
    .intro-slide h1 {
        font-size: 2em;
        font-weight: 400;
    }

    .swiper-slide img{
        height: calc(100vh - 90px);
    }

</style>
<script>
    (function ($) {
        var getPhotoset = function (photosetId) {
            var s = "https://api.flickr.com/services/rest/";
            return $.when($.getJSON(
                s,
                {
                    method: "flickr.photosets.getPhotos",
                    api_key: "<%- site.data.flickr.api_key %>",
                    photoset_id: photosetId,
                    user_id: "<%- site.data.flickr.user_id %>",
                    format: "json",
                    nojsoncallback: "1",
                    extras: "original_format"
                }
            )).then(function (data) {
                return data.photoset.photo.map(function (e) {
                    return {
                        id: e.id,
                        url: "https://farm" + e.farm + ".staticflickr.com/" + e.server + "/" + e.id + "_" + e.secret + "_h.jpg"
                    };
                });
            });
        }

        getPhotoset("<%- page.flickr_photoset_id %>").then(function (images) {
            var slides = $("div.swiper-container > div");
            images.forEach(function (image) {
                var div = $("<div><img/></div>");
                div.addClass('swiper-slide');
                $('img', div).attr('src', image.url);
                slides.append(div);
            });
        });
    })(jQuery);

</script>
<%- partial('_partial/foot.ejs') %>