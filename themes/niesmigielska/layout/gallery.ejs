<%- partial('_partial/head.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.2/css/swiper.min.css" />
<body id="gallery">
<%- partial('_partial/header.ejs') %>
<div class="swiper-container">
    <div class="swiper-wrapper">
        <div class="intro-slide swiper-slide" style="width: 400px">
            <%- page.title %>
            <%- page.content %>
        </div>
    </div>
</div>
<style>
    html, body {
        height: 100%;
    }
    .swiper-slide img {
        height: 400px;
    }

    .swiper-container {
        width: auto;
        height: 400px;
        margin-left: auto;
        margin-right: auto;
    }
    .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;
        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
    }
</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.4.2/js/swiper.min.js"></script>
<script>
    (function ($) {
        var getPhotoset = function (photosetId) {
            var s = "https://api.flickr.com/services/rest/";
            return $.when($.getJSON(
                s,
                {
                    method: "flickr.photosets.getPhotos",
                    api_key: "<%- site.data.flickr.api_key %>",
                    photoset_id: photosetId,
                    user_id: "<%- site.data.flickr.user_id %>",
                    format: "json",
                    nojsoncallback: "1",
                    extras: "original_format"
                }
            )).then(function (data) {
                return data.photoset.photo.map(function (e) {
                    return {
                        id: e.id,
                        url: "https://farm" + e.farm + ".staticflickr.com/" + e.server + "/" + e.id + "_" + e.secret + "_h.jpg"
                    };
                });
            });
        }

        getPhotoset("<%- page.flickr_photoset_id %>").then(function (images) {
            var slides = $("div.swiper-container > div");
            images.forEach(function(image){
                var div = $("<div><img/></div>");
                div.addClass('swiper-slide');
                $('img', div).attr('src',image.url);
                slides.append(div);
            });

            var mySwiper = new Swiper ('.swiper-container', {
                // Optional parameters
                direction: 'horizontal',
                loop: false,
                slidesPerView: 'auto',
                mousewheelControl: true,
                updateOnImagesReady: true,
                spaceBetween: 30,
                slidesPerView: 'auto',
                centeredSlides: false,
            })
        });
    })(jQuery);

</script>
